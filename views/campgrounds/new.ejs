<% include ../partials/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;" class="col-lg-12">Add New Campground</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action = '/campgrounds' method = 'POST'>
				<div class="form-group">
					<input class="form-control col-lg-12" type='text' name='campground' placeholder='Campground Name'>
				</div>
				<div class="form-group">
					<input class="form-control col-lg-12" type='number' name='price' placeholder='Price' min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control col-lg-12" type='text' name='image' placeholder='image url'>
				</div>
				<div class="form-group">
					<input class="form-control col-lg-12" type='text' name='description' placeholder='Description'>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>
</div>

<% include ../partials/footer %>