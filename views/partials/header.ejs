<!DOCTYPE html>
<html>
<head>
	<title>Yelp Camp</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="/stylesheets/main.css">
</head>
<body>
	<nav class="navbar navbar-light bg-light">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">YelpCamp</a>
			</div>
			<div>
				<ul class="nav ml-auto">
					<!-- if user true -->
					<% if(!currentUser){ %>
						<li class="navbar-brand"><a class="navbar-brand" href="/Login">Login</a></li>
						<li class="navbar-brand"><a class="navbar-brand" href="/register">Sign Up</a></li>
					<% }else{ %>
						<!-- else -->
						<li class="navbar-brand"><a class="navbar-brand" href="#">Signed in as <%= currentUser.username %></a></li>
						<li class="navbar-brand"><a class="navbar-brand" href="/logout">Logout</a></li>
					<% } %>
				</ul>
			</div>
		</div>
	</nav>

	<div class="container">
		<% if(error && error.length > 0){ %>
			<div class="alert alert-danger" role="alert">
				<h1><%= error %></h1>
			</div>
		<% } %>
		<% if(success && success.length > 0){ %>
			<div class="alert alert-success" role="alert">
				<h1><%= success %></h1>
			</div>
		<% } %>
	</div>

